@page "/bootcamp"
@inject HttpClient Http

<PageTitle>Hellums World!</PageTitle>
<p></p>

<center><h1>2022 Projects (C#, Python)</h1></center>

<p>Below is a list of software-related projects I've worked on this year through <a target="_blank" href="https://www.codelouisville.org">Code Louisville</a> and self-study. </p>

@if (examples == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        
        <thead>
            <tr>
                <th>Subject</th>
                <th>Language</th>
                <th>Model</th>
                <th>Scope</th>
                <th>Database</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Example in examples)
            {
                <tr>
                    <td>@Example.Subject</td>
                    <td>@Example.Language</td>
                    <td>@Example.Model</td>
                    <td>@Example.Scope</td>
                    <td>@Example.Database</td>
                </tr>
            }
        </tbody>
    </table>
    <p></p>
}
